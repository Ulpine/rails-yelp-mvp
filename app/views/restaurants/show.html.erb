<div class="container text-center p-3  my-3">
  <div class="infos-resto shadow p-3">
    <h1><%= @restaurant.name %></h1>
    <h3><%= @restaurant.address %></h3>
    <h3><%= @restaurant.category.capitalize %></h3>

    <h3 class="my-5">
      <% @restaurant.reviews.each do |review| %>
      <%= "#{review.content} -- Rate: #{review.rating}" %>
      <% end %>
    </h3>
  </div>

  <div class="d-flex justify-content-around icons my-5 fs-5">
      <%= link_to restaurants_path, class:"text-black" do %>
         <i class="fa-solid fa-house"></i>
      <% end %>
      <%= link_to new_restaurant_review_path(@restaurant), class:"text-black" do %>
        <i class="fa-solid fa-plus"></i>
        <% end %>
  </div>
</div>
