<h1>Add your review</h1>

<div class="col-12 col-sm-6 m-3">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, as: :select, collection: 0..5, prompt: "Select your rate"%>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>
